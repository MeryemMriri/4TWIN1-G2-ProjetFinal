pipeline {
    agent any

    stages {
        stage('GIT') {
            steps {
                echo 'Pulling code from git . . .'
                git branch: 'YoussefGHARRAD-4TWIN1-G2',
                    url: 'https://github.com/MeryemMriri/4TWIN1-G2-ProjetFinal.git'
            }
        }

        stage('Clean') {
            steps {
                sh 'mvn clean'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def mvnHome = '/usr'
                    withSonarQubeEnv('SonarQube_Server') {
                        dir("${mvnHome}") {
                            sh './bin/mvn clean verify sonar:sonar -Dsonar.projectKey=Youssef-GHARRAD-4TWIN1-G2 -Dsonar.projectName=Youssef-GHARRAD-4TWIN1-G2'
                        }
                    }
                }
            }
        }


    }
}
