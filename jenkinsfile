pipeline {
    agent any


    environment {
        M2_HOME = "/opt/apache-maven-3.6.3"
        PATH = "${M2_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clean') {
            steps {
                sh 'mvn clean'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    def mvnHome = tool 'M2_HOME'
                    withSonarQubeEnv('SonarQube_Server') {
                        sh "/${M2_HOME}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=Youssef-GHARRAD-4TWIN1-G2 -Dsonar.projectName='Youssef-GHARRAD-4TWIN1-G2'"
                    }
                }
            }
        }
    }
}
