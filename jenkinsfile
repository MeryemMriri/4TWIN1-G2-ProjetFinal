pipeline {
    agent any
    environment {
        // Define the SonarQube scanner tool
        scannerTool = 'SonarQube_Server'
    }
    stages {
        stage('GIT') {
            steps {
                echo 'Pulling code from git . . .'
                git branch: 'YoussefGHARRAD-4TWIN1-G2',
                    url: 'https://github.com/MeryemMriri/4TWIN1-G2-ProjetFinal.git'
            }
        }

        stage('Clean') {
            steps {
                sh 'mvn clean'
            }
        }

        stage('Compile') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    // Get the path to the Maven installation
                    def mvnHome = tool 'M2_HOME'
                    
                    // Check if the tool exists
                    if (mvnHome == null) {
                        error "Default Maven tool not found"
                    }

                    // Execute the SonarQube analysis with Maven
                    sh "${mvnHome}/bin/mvn clean verify sonar:sonar -Dsonar.projectKey=Youssef-GHARRAD-4TWIN1-G2 -Dsonar.projectName='Youssef-GHARRAD-4TWIN1-G2' -Dsonar.login=admin -Dsonar.password=123"
                }
            }
        }


    }
}
